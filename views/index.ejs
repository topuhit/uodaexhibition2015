<body>
    <form id="uploadForm" enctype="multipart/form-data" method="post" class="w3-container w3-light-grey w3-text-blue">
        <h2 class="w3-center">Upload</h2>
        <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user"></i></div>
            <div class="w3-rest">
                <input class="w3-input w3-border" name="name" type="text" required placeholder="Name">
            </div>
        </div>



                <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-link"></i></div>
            <div class="w3-rest">
                <input type="checkbox" class="w3-check" name="bfa" value="BFA"> BFA<br>
            </div>
        </div>
        <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-link"></i></div>
            <div class="w3-rest">
                <input type="checkbox" class="w3-check" name="mfa" value="MFA"> MFA<br>
            </div>
        </div>

        
        <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-link"></i></div>
            <div class="w3-rest">
                <input class="w3-input w3-border" name="batch" type="text" placeholder="Batch">
            </div>
        </div>



                <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-envelope-o"></i></div>
            <div class="w3-rest">
                <input class="w3-input w3-border" name="title" required type="text" placeholder="Title">
            </div>
        </div>




        <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-link"></i></div>
            <div class="w3-rest">
                <input type="checkbox" class="w3-check" name="award" value="Awarded"> Awarded<br>
            </div>
        </div>


        
        </div>

        <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-pencil"></i></div>
            <div class="w3-rest">
                <input class="w3-input w3-border" name="userFile" required type="file" placeholder="userFile">
            </div>
        </div>
        <p class="w3-center">
            <input type="submit" class="w3-button w3-section w3-blue w3-ripple" placeholder="Upload File" name="submit">
        </p>
    </form>

 <div class="allimages">
        <% speakers.forEach(function(item) { %>
             <div class="item text"  style="width:300px; height:auto;">
                <a href="file/<%= item.seourl %>"><img data-src="http://res.cloudinary.com/topuhit/image/upload/w_auto,c_scale/e_sharpen/v<%= item.artwork.version %>/<%= item.artwork.public_id %>.<%= item.artwork.format %>" class="cld-responsive img-responsive" alt="<%= item.name %> - <%= item.title %>"></a>
                <a href="file/<%= item.seourl %>"><div class=""><h2><%= item.name %></h2><p><%= item.title %>
                <%= item.mfa %><%= item.bfa %> - <%= item.batch %></p>
                </div></a>
            </div>
           
            <%  }); %>
    </div>


























    
